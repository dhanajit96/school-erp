<div class="row">
  <div class="col-lg-12">
    <div class="card m-b-30">
      <div class="card-header">
        <h5 class="card-title">Classmates & Progress</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Student</th>
                <th>Email</th>
                <th>Status</th>
                <th>Progress (Mock)</th>
              </tr>
            </thead>
            <tbody>
              <% if @students.any? %>
                <% @students.each do |student| %>
                  <tr>
                    <td>
                      <img src="/assets/images/users/men.svg" class="img-fluid rounded-circle mr-2" width="30" alt="user">
                      <%= student.name %>
                      <% if student == current_user %>
                        <span class="badge badge-primary ml-1">You</span>
                      <% end %>
                    </td>
                    <td><%= student.email %></td>
                    <td><span class="badge badge-success">Active</span></td>
                    <td>
                      <div class="progress" style="height: 5px;">
                        <div class="progress-bar" role="progressbar" style="width: <%= rand(20..100) %>%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                      <small class="text-muted"><%= rand(20..100) %>% Completed</small>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="4" class="text-center text-muted">No other students in this batch yet.</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>