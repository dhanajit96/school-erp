<div class="row">
  <div class="col-lg-12">
    <div class="card m-b-30">
      <div class="card-header">
        <h5 class="card-title">Classmates: <%= @batch.name %></h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Joined On</th>
              </tr>
            </thead>
            <tbody>
              <% if @students.any? %>
                <% @students.each do |student| %>
                  <tr>
                    <td>
                      <img src="/assets/images/users/men.svg" class="img-fluid rounded-circle" width="30" alt="user">
                      <span class="ml-2"><%= student.name %></span>
                    </td>
                    <td><%= student.email %></td>
                    <td><%= student.enrollments.find_by(batch: @batch).created_at.strftime("%d %b %Y") %></td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan="3" class="text-center">No students enrolled in this batch yet.</td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>