<div class="row">
  <div class="col-lg-12">
    <div class="card m-b-30">
      <div class="card-header">
        <h5 class="card-title">Registered Schools</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered">
            <thead class="thead-dark">
              <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Subdomain</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @schools.each do |school| %>
                <tr>
                  <td><%= school.name %></td>
                  <td><%= school.address %></td>
                  <td><%= school.subdomain %></td>
                  <td>
                    <%= link_to "Edit", edit_school_path(school), class: "btn btn-outline-warning btn-sm" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>