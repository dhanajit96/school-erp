<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Soyuz is a bootstrap 4x + laravel admin dashboard template">
    <meta name="keywords" content="admin, admin dashboard, admin panel, admin template, analytics, bootstrap 4, laravel, clean, crm, ecommerce, hospital, responsive, rtl, sass support, ui kits">
    <meta name="author" content="Themesbox17">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <title>STA Dashboard Template</title>
    <link rel="shortcut icon" href="/assets/images/sta_odisha.svg">
    <link href="/assets/plugins/switchery/switchery.min.css" rel="stylesheet">
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="/assets/css/icons.css" rel="stylesheet" type="text/css">
    <link href="/assets/css/flag-icon.min.css" rel="stylesheet" type="text/css">
    <link href="/assets/css/style.css" rel="stylesheet" type="text/css">
    <%= stylesheet_link_tag "soyuz", "data-turbo-track": "reload" %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= yield :head %>
  </head>
  <body class="vertical-layout">
    <div class="infobar-settings-sidebar-overlay"></div>
    <div id="containerbar">
      <div class="leftbar">
        <div class="sidebar">
          <div class="navigationbar">
            <div class="vertical-menu-icon">
              <div class="nav flex-column nav-pills" role="navigation">
                <div class="logobar" style="padding: 3px 0;">
                  <a href="<%= root_path %>" class="logo logo-small">
                    <img src="/assets/images/white_sta_odisha.svg" class="img-fluid" alt="logo" style="height: 60px;">
                  </a>
                </div>
                <a class="nav-link <%= "active" if request.path == root_path %>" href="<%= root_path %>" title="Dashboard">
                  <img src="/assets/images/svg-icon/crm.svg" class="img-fluid" alt="Dashboard" data-toggle="tooltip" data-placement="top">
                </a>
                <% if can? :manage, School %>
                  <a class="nav-link <%= "active" if controller_name == "schools" %>" href="<%= schools_path %>" title="Schools">
                    <img src="/assets/images/svg-icon/hospital.svg" class="img-fluid" alt="Schools" data-toggle="tooltip" data-placement="top">
                  </a>
                <% end %>
                <% if can? :manage, Course %>
                  <a class="nav-link <%= "active" if controller_name == "courses" || controller_name == "batches" %>" href="<%= courses_path %>" title="Courses & Batches">
                    <img src="/assets/images/svg-icon/ecommerce.svg" class="img-fluid" alt="Courses" data-toggle="tooltip" data-placement="top">
                  </a>
                <% end %>
                <% if current_user.school_admin? %>
                  <a class="nav-link <%= "active" if controller_name == "enrollments" %>" href="<%= enrollments_path %>" title="Enrollment Requests">
                    <img src="/assets/images/svg-icon/ui-kits.svg" class="img-fluid" alt="Enrollments" data-toggle="tooltip" data-placement="top">
                  </a>
                <% end %>
                <% if current_user.student? %>
                  <a class="nav-link" href="#" title="My Profile">
                    <img src="/assets/images/svg-icon/pages.svg" class="img-fluid" alt="Profile" data-toggle="tooltip" data-placement="top">
                  </a>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="rightbar">
        <div class="topbar-mobile">
          <div class="row align-items-center">
            <div class="col-md-12">
              <div class="mobile-logobar">
                <a href="#" class="mobile-logo"><img src="/assets/images/logo.svg" class="img-fluid" alt="logo"></a>
              </div>
              <div class="mobile-togglebar">
                <ul class="list-inline mb-0">
                  <li class="list-inline-item">
                    <div class="topbar-toggle-icon">
                      <a class="topbar-toggle-hamburger" href="javascript:void();">
                        <img src="/assets/images/svg-icon/horizontal.svg" class="img-fluid menu-hamburger-horizontal" alt="horizontal">
                        <img src="/assets/images/svg-icon/verticle.svg" class="img-fluid menu-hamburger-vertical" alt="verticle">
                      </a>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="topbar">
          <div class="row align-items-center">
            <div class="col-md-12 align-self-center">
              <div class="togglebar">
                <ul class="list-inline mb-0">
                  <div class="logobar p-0">
                    <a href="#" class="logo logo-large">
                      <% # <img src="/assets/images/sta_odisha.svg" class="img-fluid" alt="logo" style="width: 60px;"> %>
                      <img src="/assets/images/logo.svg" class="img-fluid" alt="logo">
                    </a>
                  </div>
                </ul>
              </div>
              <div class="infobar">
                <ul class="list-inline mb-0">
                  <li class="list-inline-item">
                    <div class="profilebar">
                      <div class="dropdown">
                        <a class="dropdown-toggle" href="#" role="button" id="profilelink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="/assets/images/users/profile.svg" class="img-fluid" alt="profile"><span class="live-icon">John Doe</span><span class="feather icon-chevron-down live-icon"></span></a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profilelink">
                          <div class="dropdown-item">
                            <div class="profilename">
                              <h5>John Doe</h5>
                            </div>
                          </div>
                          <div class="userbox">
                            <ul class="list-unstyled mb-0">
                              <li class="media dropdown-item">
                                <%= link_to destroy_user_session_path, method: :delete, class: "profile-icon" do %>
                                  <img src="/assets/images/svg-icon/logout.svg" class="img-fluid" alt="logout">
                                  Logout
                                <% end %>
                              </li>
                            </ul>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="breadcrumbbar">
          <div class="row align-items-center">
            <div class="col-md-8 col-lg-8">
              <h4 class="page-title"><%= @page_title %></h4>
              <div class="breadcrumb-list">
                <ol class="breadcrumb">
                  <% @breadcrumb_list.each_with_index do |(title, url), index| %>
                    <% if index == @breadcrumb_list.size - 1 %>
                      <!-- Active breadcrumb -->
                      <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
                    <% else %>
                      <li class="breadcrumb-item">
                        <%= link_to title, url %>
                      </li>
                    <% end %>
                  <% end %>
                </ol>
              </div>
            </div>
            <div class="col-md-4 col-lg-4">
              <div class="widgetbar text-right">
                <% @actions.each do |title, url| %>
                  <%= link_to url, class: "btn btn-primary-rgba ml-2" do %>
                    <i class="feather icon-plus mr-2"></i><%= title %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="contentbar">
          <% if notice.present? %>
            <div class="alert alert-success" role='alert'>
              <%= notice %>
            </div>
          <% end %>
          <% if alert.present? %>
            <div class="alert alert-danger" role="alert"><%= alert %></div>
          <% end %>
          <% # <div class="row"> %>
          <%= yield %>
          <% # </div> %>
        </div>
        <div class="footerbar">
          <footer class="footer">
            <p class="mb-0">Â© 2025 Nectere solutions.</p>
          </footer>
        </div>
      </div>
    </div>
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/popper.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/modernizr.min.js"></script>
    <script src="/assets/js/detect.js"></script>
    <script src="/assets/js/jquery.slimscroll.js"></script>
    <script src="/assets/js/vertical-menu.js"></script>
    <script src="/assets/plugins/switchery/switchery.min.js"></script>
    <script src="/assets/js/core.js"></script>
    <%= yield :script %>
  </body>
</html>