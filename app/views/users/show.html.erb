<div class="row">
  <div class="col-lg-4">
    <div class="card m-b-30">
      <div class="card-body text-center">
        <img src="/assets/images/users/men.svg" class="img-fluid rounded-circle mb-3" width="100" alt="profile">
        <h5><%= @student.name %></h5>
        <p class="text-muted"><%= @student.email %></p>
        <span class="badge badge-primary"><%= @student.role.humanize %></span>
        <hr>
        <p class="text-left"><strong>School:</strong> <%= @student.school&.name || "N/A" %></p>
        <p class="text-left"><strong>Joined:</strong> <%= @student.created_at.strftime("%d %b %Y") %></p>
      </div>
    </div>
  </div>
  <div class="col-lg-8">
    <div class="card m-b-30">
      <div class="card-header">
        <h5 class="card-title">Enrollment History</h5>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>Course</th>
                <th>Batch</th>
                <th>Request Date</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @enrollments && @enrollments.each do |enrollment| %>
                <tr>
                  <td><%= enrollment.batch.course.name %></td>
                  <td><%= enrollment.batch.name %></td>
                  <td><%= enrollment.created_at.strftime("%d %b %Y") %></td>
                  <td>
                    <% status_class = case enrollment.status
                       when 'approved' then 'success'
                       when 'pending' then 'warning'
                       when 'denied' then 'danger'
                       end %>
                    <span class="badge badge-<%= status_class %>">
                      <%= enrollment.status.humanize %>
                    </span>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>